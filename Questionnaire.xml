<?xml version="1.0" encoding="UTF-8"?>
<xs:schema targetNamespace="Schema_questionnaire.xsd">
 <questionnaire>

  <instructions>Ceci est un Questionnaire à Choix Multiple : il faut choisir une réponse parmi les 4 proposées </instructions>

    <question type = "reponse unique" format ="radiobButton" id="1" dataType="xsd:string">
        <enonce>"Dans ma tirelire en forme de coquillage, j’avais 25 euros. Pour mon anniversaire, on m’a donné 3 pièces de 2 euros, 4 pièces de 1 euros, et 3 pièces de 50 centimes. Combien d’argent j’ai au final dans ma tirelire ? </enonce>
        <reponse>30 euros</reponse>
        <reponse>33 euros et 50 centimes</reponse>
        <reponse>35 euros </reponse>
        <reponse correct="oui">36 euros et 50 centimes</reponse>
    </question>

    <question type = "reponse unique" format="radioButton" id="2" dataType="xsd:string">
        <ennonce>Sur ma feuille il y a écrit “ 5 x 3 ”. Aide moi à trouver ce qui me donne le même résultat : </ennonce>
        <reponse>10 + 3</reponse>
        <reponse>2 + 2 + 2 + 5 + 3</reponse>
        <reponse correct ="oui">10 + 5</reponse>
        <reponse>3 x 4 </reponse>  
    </question>

   <question type = "reponse unique" format="radioButton" id="3" dataType="xsd:string">
        <ennonce>J’ai 423 coquillages dans ma collection. Dis moi dans ce nombre quel est la bonne combinaison de centaines, dizaines et unités : </ennonce>
        <reponse>300 + 40 + 3 </reponse>
        <reponse correct = "oui">400 + 20 + 3</reponse>
        <reponse>200 + 30 + 4</reponse>
        <reponse>300 + 40 + 2</reponse> 
    </question>

    <question type = "reponse unique" format="radioButton" id="4" dataType="xsd:string">
        <ennonce>Quelle est la femelle de l’âne ? </ennonce>
        <reponse>La jument </reponse>
        <reponse>L’ânette </reponse>
        <reponse correct ="oui">L'ânesse </reponse>
        <reponse>La canne </reponse>  
    </question>

    <question type = "reponse unique" format="radioButton" id="5" dataType="xsd:string">
        <ennonce>Quelle science étudie les atomes et les molécules ? </ennonce>
        <reponse>La physique</reponse>
        <reponse correct ="oui">La chimie</reponse>
        <reponse>La biologie</reponse>
        <reponse>Les mathématiques</reponse> 
    </question>

    <question type = "reponse unique" format="radioButton" id="6" dataType="xsd:string">
        <ennonce>Combien de fois par jour la grande aiguille d’une horloge indique-t-elle le chiffre 4 ? </ennonce>
        <reponse >2 fois</reponse>
        <reponse correct ="oui">4 fois</reponse>
        <reponse>12 fois</reponse>
        <reponse>24 fois</reponse>
    </question>

    <question type = "reponse unique" format="radioButton" id="7" dataType="xsd:string">
        <ennonce>Le “Fair-play” c’est : </ennonce>
        <reponse correct ="oui">Respecter les règles, les autres et soi-même </reponse>
        <reponse>Être mauvais joueur et toiser son adversaire</reponse>
        <reponse >Tricher et provoquer son adversaire </reponse>
        <reponse>Manquer de respect aux participants</reponse>  
    </question>

    <question type = "reponse unique" format="radioButton" id="8" dataType="xsd:string">
        <ennonce>Dans quel domaine Pablo Picasso s’est-il particulièrement illustré ? </ennonce>
        <reponse>La musique</reponse>
        <reponse correct ="oui">La peinture</reponse>
        <reponse >Le football</reponse>
        <reponse>Le théâtre </reponse> 
    </question>

    <question type = "reponse unique" format="radioButton" id="9" dataType="xsd:string">
        <ennonce>Une vitesse égale à 36 km/h correspond à :</ennonce>
